<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.alphareborn.stochastik_app.WuerfelRechner"
    android:id="@+id/wuerfel_rechner">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/output"
        android:text="Einsen: 0"
        android:layout_marginTop="92dp"
        android:textSize="20dp"
        android:layout_below="@+id/button"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/output3"
        android:text="Dreien: 0"
        android:layout_marginTop="63dp"
        android:textSize="20dp"
        android:layout_below="@+id/output"
        android:layout_alignLeft="@+id/output"
        android:layout_alignStart="@+id/output" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/output4"
        android:text="Vieren: 0"
        android:textSize="20dp"
        android:layout_alignTop="@+id/output3"
        android:layout_alignLeft="@+id/output2"
        android:layout_alignStart="@+id/output2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/output5"
        android:text="F端nfen: 0"
        android:textSize="20dp"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/output3"
        android:layout_alignLeft="@+id/output3"
        android:layout_alignStart="@+id/output3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/output6"
        android:text="Sechsen: 0"
        android:textSize="20dp"
        android:layout_alignTop="@+id/output5"
        android:layout_alignLeft="@+id/output4"
        android:layout_alignStart="@+id/output4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/output2"
        android:text="Zweien: 0"
        android:textSize="20dp"
        android:layout_alignTop="@+id/output"
        android:layout_marginLeft="200dp"
        android:layout_marginStart="200dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/wurfzahl"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="W端rfel Werfen!"
        android:id="@+id/button"
        android:layout_below="@+id/wurfzahl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Anzahl der W端rfelw端rfe:"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
